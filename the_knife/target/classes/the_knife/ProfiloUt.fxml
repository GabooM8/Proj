<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #fbf7ef;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" spacing="20" maxWidth="700" prefWidth="700" prefHeight="550">
         <padding>
            <Insets top="30" right="20" bottom="30" left="20"/>
         </padding>

         <!-- Titolo -->
         <Label text="Profilo Utente" textFill="#267067" style="-fx-font-size: 24px; -fx-font-family: 'Open Sans'; -fx-font-weight: bold;">
            <font>
               <Font name="Open Sans" size="24"/>
            </font>
         </Label>

         <!-- TabPane esteso -->
         <TabPane tabClosingPolicy="UNAVAILABLE" prefWidth="680" prefHeight="460" VBox.vgrow="ALWAYS">
            <tabs>
               <!-- Tab Dati Personali -->
               <Tab text="Dati Personali" closable="false">
                  <content>
                     <VBox alignment="CENTER" spacing="20" prefHeight="440">
                        <padding>
                           <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>

                        <!-- Form -->
                        <GridPane hgap="15" vgap="15">
                           <columnConstraints>
                              <ColumnConstraints percentWidth="50"/>
                              <ColumnConstraints percentWidth="50"/>
                           </columnConstraints>
                           <children>
                              <TextField promptText="Nome" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                              <TextField promptText="Cognome" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                              <TextField promptText="Username" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                              <PasswordField promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                              <DatePicker promptText="Data di nascita" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                              <TextField promptText="Luogo del domicilio" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                           </children>
                        </GridPane>

                        <!-- Bottone -->
                        <Button text="Aggiorna i dati" style="-fx-background-color: #267067; -fx-text-fill: white;" maxWidth="250"/>
                     </VBox>
                  </content>
               </Tab>

               <!-- Tab Preferiti -->
               <Tab text="Preferiti" closable="false">
                  <content>
                     <VBox spacing="15" alignment="CENTER" prefHeight="440">
                        <padding>
                           <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <ListView prefHeight="360" prefWidth="640"/>
                     </VBox>
                  </content>
               </Tab>

               <!-- Tab Recensioni -->
               <Tab text="Recensioni" closable="false">
                  <content>
                     <VBox spacing="15" alignment="CENTER" prefHeight="440">
                        <padding>
                           <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <ListView prefHeight="360" prefWidth="640"/>
                     </VBox>
                  </content>
               </Tab>
            </tabs>
         </TabPane>
      </VBox>
   </children>
</StackPane>
